<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E9C46A"
    >


    <ImageView
        android:id="@+id/imagen_elemento"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/messi"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texto_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagen_elemento"
        app:layout_constraintTop_toTopOf="@+id/imagen_elemento" />

    <TextView
        android:id="@+id/texto_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagen_elemento"
        app:layout_constraintEnd_toEndOf="@+id/texto_nombre"
        app:layout_constraintStart_toStartOf="@+id/texto_nombre" />


</androidx.constraintlayout.widget.ConstraintLayout>