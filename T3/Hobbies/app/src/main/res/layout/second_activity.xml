<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context=".SecondActivity">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lista_elementos"
            android:layout_marginTop="50dp"
            />
        <Spinner
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#F4A261"
        android:id="@+id/spinnerHobbies"
        />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="#2A9D8F"
            android:id="@+id/frame_seleccionado">

            <ImageView
                android:id="@+id/imagen_elemento_seleccionado"
                android:layout_width="120dp"
                android:layout_height="132dp"
                android:layout_gravity="bottom"
                android:src="@drawable/messi" />

            <TextView
                android:id="@+id/texto_nombre_seleccionado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/texto_descripcion_seleccionado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </FrameLayout>
    </FrameLayout>

</LinearLayout>