<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:text="Operaciones"
        android:background="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="X!"
            android:backgroundTint="@color/nums"
            android:textSize="25dp"
            android:id="@+id/bFactorial"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:backgroundTint="#9C9999"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="+/-"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/primeros3"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="%"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/primeros3"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:backgroundTint="#229703"
            android:text="÷"
            android:textSize="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="√ "
            android:backgroundTint="@color/nums"
            android:textSize="25dp"
            android:id="@+id/bRaiz"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:backgroundTint="#494747"
            android:text="7"
            android:textSize="25dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="8"
            android:textSize="25dp"
            android:backgroundTint="@color/nums"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="9"
            android:textSize="25dp"
            android:backgroundTint="@color/nums"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="X"
            android:textSize="25dp"
            android:backgroundTint="@color/operaciones"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="^"
            android:backgroundTint="@color/nums"
            android:textSize="25dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:backgroundTint="#494747"
            android:text="4"
            android:textSize="25dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="5"
            android:textSize="25dp"
            android:backgroundTint="@color/nums"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="6"
            android:textSize="25dp"
            android:backgroundTint="@color/nums"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="X"
            android:textSize="25dp"
            android:backgroundTint="@color/operaciones"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="LN"
            android:backgroundTint="@color/nums"
            android:textSize="25dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:backgroundTint="#494747"
            android:text="1"
            android:textSize="25dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="2"
            android:textSize="25dp"
            android:backgroundTint="@color/nums"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="3"
            android:textSize="25dp"
            android:backgroundTint="@color/nums"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="X"
            android:textSize="25dp"
            android:backgroundTint="@color/operaciones"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="E"
            android:backgroundTint="@color/nums"
            android:textSize="25dp" />

        <Button
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:backgroundTint="#494747"
            android:text="0"
            android:textSize="25dp" />


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="."
            android:textSize="25dp"
            android:backgroundTint="@color/nums"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="X"
            android:textSize="25dp"
            android:backgroundTint="@color/operaciones"
            />


    </LinearLayout>

</LinearLayout>